<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Responsive Login Page</title>
  <link href=
  "https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" 
            rel="stylesheet" />  
</head>
<body class="bg-gray-100 overflow-hidden">
  <!-- Navbar -->
  <nav class="bg-blue-600 ">
    <div class="container mx-auto flex items-center justify-between px-4 py-3">
      <!-- App Name -->
      <div class="text-xl font-bold text-white">
        <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
        Optho-App
      </div>
      <!-- Logo -->
      <div>
        <img 
        src="assests/Indian_Railway_Logo_1.png" 
          alt="Logo" 
          class="w-12"
          
        />
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="flex items-center justify-center min-h-screen px-4 bg-gray-100">
    <div class="w-full max-w-md p-8 space-y-6 bg-white rounded-lg shadow-md">
      
      <div class="flex items-center justify-center">
        <div class=" flex items-center justify-center">
          <h1 class="text-xl font-bold">Sign In</h1>
        </div>
      </div>

      <!-- Form -->
      <form action="/login" method="POST" class="space-y-4">
        <!-- Email Field -->
        <div class="relative">
          <input 
            id="email" 
            type="email" 
            name="username"
            class=" w-full px-9 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" 
            placeholder="Enter your email" 
            required
          />
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <img 
                src="/assests/mail-icon.png" 
                    alt="Email Icon" 
                    class="w-5 h-5"
                />
            </div>

        </div>

        <!-- Password Field  -->
        <div class="relative">
          <input 
            id="password" 
            type="password" 
            name="password"
            class="w-full px-9 py-2 border rounded-md focus:ring-blue-500 focus:border-blue-500" 
            placeholder="Enter your password" 
            required
          />
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
