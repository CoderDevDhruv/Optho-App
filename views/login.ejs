        <span>Sign in with Google</span>
      </button>

      <!-- Register Section -->
      <div class="text-center mt-4">
        <span class="text-sm text-gray-500">Don't have an account? </span>
        <a href="/register" class="text-sm text-blue-600 hover:underline">Register here</a>
      </div>
    </div>
  </div>
</body>
</html>