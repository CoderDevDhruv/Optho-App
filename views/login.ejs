        </div>
        </div>



        <!-- Login Button -->
        <button 
          type="submit" 
          class="w-full px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:ring-4 focus:ring-blue-300">
          Sign In
        </button>
      </form>

      <!-- Divider -->
      <div class="relative flex items-center justify-center">
        <span class="absolute px-2 bg-white text-sm text-gray-500">OR</span>
        <hr class="w-full border-gray-300">
      </div>

      <!-- Google Sign In -->
      <button onclick="window.location.href='/auth/google'"
        type="button" 
        class="w-full px-4 py-2 text-black-700 bg-white rounded-md hover:bg-gray-200 flex items-center justify-center space-x-2 border">
