<html>
<head>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/styles/style.css">
    <title>Optho-App</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-gray-100 p-6">
    <form action="/addPat" method="post">
        <div class="max-w-6xl mx-auto bg-white p-6 rounded-lg shadow-lg">
            <h1 class="text-2xl font-bold text-teal-600 mb-4">Patients Entry</h1>
            <div class="border rounded-lg p-4">
                <div class="grid grid-cols-4 gap-4 mb-4">
                    <div>
                        <label class="block text-gray-700">Full Name</label>
                        <input type="text" class="w-full border rounded p-2" placeholder="Value" name="name">
                    </div>
                    <div>
                        <label class="block text-gray-700">Registration No.</label>
                        <input type="text" class="w-full border rounded p-2" placeholder="Value" name="registration_no">
                    </div>
                    <div>
                        <label class="block text-gray-700">Contact No.</label>
                        <input type="text" class="w-full border rounded p-2" placeholder="Value" name="contact">
                    </div>
                    <div>
                        <label class="block text-gray-700">Age</label>
                        <input type="text" class="w-full border rounded p-2" placeholder="Value" name="age">
                    </div>
                </div>
                <div class="grid grid-cols-6 gap-4 mb-4">
                    <div>
                        <label class="block text-gray-700">Sex :</label>
                        <div class="flex items-center space-x-2">
                            <label class="flex items-center">
                                <input type="radio" name="sex" class="mr-1" value="Male"> Male
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="sex" class="mr-1" value="Female"> Female
                            </label>
                        </div>
                    </div>
                    <div>
                        <label class="block text-gray-700">Type Of Diabetes</label>
                        <select class="w-full border rounded p-2" name="type">
                            <option selected>Type I</option>
                            <option>Type II</option>
                            <option>MODY</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-gray-700">Insulin</label>
                        <div class="flex items-center space-x-2">
                            <label class="flex items-center">
                                <input type="radio" name="insulin" class="mr-1" value="Yes"> Yes
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="insulin" class="mr-1" value="No"> No
                            </label>
                        </div>
                    </div>
                    <div>
                        <label class="block text-gray-700">No. of OHA</label>
                        <input type="text" class="w-full border rounded p-2" placeholder="Value" name="oha_count">
                    </div>
                    <div>
                        <label class="block text-gray-700">HBA1c</label>
                        <input type="text" class="w-full border rounded p-2" placeholder="Value" name="HBA1c">
                    </div>
                </div>
                <div class="mb-4">
                    <div class="bg-purple-500 text-white text-center py-2 rounded-t-lg">Ocular Examination</div>
                    <div class="border rounded-b-lg p-4">
                        <div class="grid grid-cols-3 gap-4">
                            <div></div>
                            <div class="text-center font-bold">Right Eye</div>
                            <div class="text-center font-bold">Left Eye</div>
                        </div>
                        <div class="grid grid-cols-3 gap-4 mt-2">
                            <div class="flex items-center">Visual Acuity (BCVA)</div>
                            <input type="text" class="border rounded p-2" placeholder="Value" name="bcva_right">
                            <input type="text" class="border rounded p-2" placeholder="Value" name="bcva_left">
                        </div>
                        <div class="grid grid-cols-3 gap-4 mt-2">
                            <div class="flex items-center">IOP (mmHg)</div>
                            <input type="text" class="border rounded p-2" placeholder="Value" name="iop_right">
                            <input type="text" class="border rounded p-2" placeholder="Value" name="iop_left">
                        </div>
                    </div>
                </div>
                <div class="mb-4">
                    <div class="bg-purple-500 text-white text-center py-2 rounded-t-lg">Fundus Examination</div>
                    <div class="border rounded-b-lg p-4">
                        <div class="grid grid-cols-5 gap-4">
                            <div></div>
                            
                            <div class="text-center font-bold">DR (ETDRS grade)</div>
                            <div class="text-center font-bold">Macular Edema (Yes / No)</div>
                            <div class="text-center font-bold">OCT Finding (CMT in Microns)</div>
                        </div>
                        <div class="grid grid-cols-5 gap-4 mt-2">
                            <div class="flex items-center">Right Eye</div>
                            <input type="text" class="border rounded p-2" placeholder="Value" name="dr_right">
                            <input type="text" class="border rounded p-2" placeholder="Value" name="macular_edema_right">
                            <input type="text" class="border rounded p-2" placeholder="Value" name="oct_finding_right">
                        </div>
                        <div class="grid grid-cols-5 gap-4 mt-2">
                            <div class="flex items-center">Left Eye</div>
                            <input type="text" class="border rounded p-2" placeholder="Value" name="dr_left">
                            <input type="text" class="border rounded p-2" placeholder="Value" name="macular_edema_left">
                            <input type="text" class="border rounded p-2" placeholder="Value" name="oct_finding_left">
                        </div>
                    </div>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <div class="flex flex-col">
                        <div class="bg-purple-500 text-white text-center py-2 rounded-t-lg">Treatement Advice</div>
                        <div class="border rounded-b-lg p-4 flex-grow">
                            <div class="mb-2">
                                <label class="block text-gray-700">RE :</label>
                                <input type="text" class="w-full border rounded p-2" placeholder="Value" name="right_eye_advice">
                            </div>
                            <div>
                                <label class="block text-gray-700">LE :</label>
                                <input type="text" class="w-full border rounded p-2" placeholder="Value" name="left_eye_advice">
                            </div>
                        </div>
                    </div>
                    <div class="flex flex-col">
                        <div class="bg-purple-500 text-white text-center py-2 rounded-t-lg">Follow UP</div>
                        <div class="border rounded-b-lg p-4 flex-grow">
                            <div class="mb-2">
                                <label class="block text-gray-700">Notes :</label>
                                <textarea class="w-full border rounded p-2 h-32" rows="5" placeholder="Value" name="follow_up"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="flex items-end">
                        <button class="w-full bg-green-500 text-white py-2 rounded">SUBMIT</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>
</html>