<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Optho-App</title>

    <!-- <link rel="stylesheet" href="styles/addPat.css"> -->
    <link rel="stylesheet" href="styles/tailstyle.css">
</head>

<body class="h-svh">
    <div class="wrapper w-full h-svh  bg-blue-300">
        <!-- <h6>Add Patients</h6> -->
        <form action="/addPat" method="post" class="w-fit h-screen flex justify-around bg-white/50 backdrop-blur-xl">
            <div class="hstry w-fit h-fit bg-slate-200 flex-col justify-between">

                <div>
                    <label class="font-medium text-xl" for="name">Name: </label>
                    <input class="w-60 block rounded-sm p-1 text-base" type="text" id="name" name="name" required autofocus placeholder="Patient Name"
                        required>
                </div>


                <div class="">
                    <label class="font-medium text-xl" for="reg">Registration Number:</label>
                    <input class="w-60 block rounded-sm p-1 text-base" type="text" id="reg" name="reg" required placeholder="Registration Number"
                        value="<%= reg%>">
                </div>

                <div class="oha flex">
                    <div class="w-fit">

                        <label for="age">Age:</label>
                        <input class="w-60 block rounded-sm p-1 text-base" type="text" id="age" name="age" placeholder="Age">

                    </div>

                    <div class="none flex-col">
                        <p>
                            <label>Sex:</label>
                        </p>
                        <div class="flex">

                            <div class="flex"><label for="male">M</label>
                                <input type="radio" id="male" name="sex" value="male" checked>
                            </div>

                            <div class="flex"><label for="female">F</label>
                                <input type="radio" id="female" name="sex" value="female">
                            </div>

                        </div>
                    </div>
                </div>

                <div class=""><label for="contact">Contact:</label>
                    <input class="block" type="text" id="contact" name="contact" placeholder="Contact Number" required>
                </div>

                <div class="oha flex">
                    <div class="">
                        <label for="beneficiary">Beneficiary:</label>
                        <select class="block" id="beneficiary" name="beneficiary">
                            <option value="self" selected>Employee</option>
                            <option value="family">Retired Employee</option>
                            <option value="other">Family</option>
                        </select>
                    </div>



                    <div class="">
                        <label for="dtype">Type of Diabetes:</label>
                        <select class="block" id="dtype" name="dtype">
                            <option value="type1" selected>Type 1</option>
                            <option value="type2">Type 2</option>
                            <option value="mody">MODY</option>
                        </select>

                    </div>
                </div>

                <div class="oha flex">

                    <div class="">
                        <label for="ddur"> Diabetes Duration:</label>
                        <select class="w-20 block" id="ddur" name="ddur">
                            <option value="Newly diagnosed(1year)" selected>Newly diagnosed(1year) </option>
                            <option value="Less than 5 years">Less than 5 years</option>
                            <option value="Between 5 years and 10 years">Between 5 years and 10 years</option>
                            <option value="More than 10 years">More than 10 years</option>
                        </select>
                    </div>

                    <div class="">
                        <div class=""> <label>Insulin: </label></div>
                        <div class="flex">
                            <label for="yes_insulin">Yes</label>
                            <input type="radio" id="yes_insulin" name="insulin" value="yes">
                            <label for="no_insulin">No</label>
                            <input type="radio" id="no_insulin" name="insulin" value="no" checked>
                        </div>
                    </div>
                </div>

                <div class="oha flex">
                    <div class="">
                        <label for="OHA_count">No. of OHA:</label>
                        <input type="text" id="OHA_count" name="oha" placeholder="No. of OHA">
                    </div>

                    <div class=""> <label for="HBA1c">HbA1c (%):</label>
                        <input type="text" id="HBA1c" name="HBA1c" placeholder="HBA1c">
                    </div>

                </div>


                <div class="obtn">
                    <label>Treatment Obtained:</label>
                    <p>
                    <p>
                        <input type="checkbox" id="none" name="treatment[]" value="none">
                        <label for="none">None</label>
                    </p>
                    <p>
                        <input type="checkbox" id="Intravitreal injection" name="treatment[]"
                            value="Intravitreal injection">
                        <label for="Intravitreal injection">Intravitreal injection</label>
                    </p>
                    <p>
                        <input type="checkbox" id="PRP" name="treatment[]" value="PRP">
                        <label for="PRP">PRP</label>
                    </p>
                    <p>
                        <input type="checkbox" id="Retinal surgery" name="treatment[]" value="Retinal surgery">
                        <label for="Retinal surgery">Retinal surgery</label>
                    </p>
                    </p>
                </div>
            </div>
            <div class="oclr w-fit h-fit flex-col justify-between">
                <!-- <h3>Visual Acuity</h3> -->
                <div class=""><label for="bcvar">BCVA Right Eye:</label>
                    <select id="bcvar" name="bcvar">
                        <option value="6/6">6/6</option>
                        <option value="6/9">6/9</option>
                        <option value="6/12">6/12</option>
                        <option value="6/18">6/18</option>
                        <option value="6/24">6/24</option>
                        <option value="6/36">6/36</option>
                        <option value="6/60">6/60</option>
                        <option value="5/60">5/60</option>
                        <option value="4/60">4/60</option>
                        <option value="3/60">3/60</option>
                        <option value="2/60">2/60</option>
                        <option value="1/60">1/60</option>
                        <option value="PL+">PL+</option>
                        <option value="PL-">PL-</option>
                    </select>
                </div>

                <div class=""><label for="bcval">BCVA Left Eye:</label>
                    <select id="bcval" name="bcval">
                        <option value="6/6">6/6</option>
                        <option value="6/9">6/9</option>
                        <option value="6/12">6/12</option>
                        <option value="6/18">6/18</option>
                        <option value="6/24">6/24</option>
                        <option value="6/36">6/36</option>
                        <option value="6/60">6/60</option>
                        <option value="5/60">5/60</option>
                        <option value="4/60">4/60</option>
                        <option value="3/60">3/60</option>
                        <option value="2/60">2/60</option>
                        <option value="1/60">1/60</option>
                        <option value="PL+">PL+</option>
                        <option value="PL-">PL-</option>
                    </select>
                </div>

                <div class=""> <label for="iopr">IOP Right Eye (mmHg):</label>
                    <input type="text" id="iopr" name="iopr" placeholder="Enter IOP">
                </div>

                <div class=""><label for="iopl">IOP Left Eye (mmHg):</label>
                    <input type="text" id="iopl" name="iopl" placeholder="Enter IOP">
                </div>
            </div>
            <div class="fnds">
                <label for="drr">DR Right Eye:</label>
                <select id="drr" name="drr">
                    <option value="No DR at present">No DR at present</option>
                    <option value="Mild NPDR">Mild NPDR</option>
                    <option value="Moderate NPDR">Moderate NPDR</option>
                    <option value="Severe NPDR">Severe NPDR</option>
                    <option value="Very severe NPDR">Very severe NPDR</option>
                    <option value="PDR without HRC">PDR without HRC</option>
                    <option value="PDR with HRC">PDR with HRC</option>
                </select>
                <br><br>

                <!-- DR Left Eye -->
                <label for="drl">DR Left Eye:</label>
                <select id="drl" name="drl">
                    <option value="No DR at present">No DR at present</option>
                    <option value="Mild NPDR">Mild NPDR</option>
                    <option value="Moderate NPDR">Moderate NPDR</option>
                    <option value="Severe NPDR">Severe NPDR</option>
                    <option value="Very severe NPDR">Very severe NPDR</option>
                    <option value="PDR without HRC">PDR without HRC</option>
                    <option value="PDR with HRC">PDR with HRC</option>
                </select>
                <br><br>

                <!-- Macular Edema Right Eye -->
                <label for="mer">Macular Edema Right Eye:</label>
                <select id="mer" name="mer">
                    <option value="Center involving">Center involving</option>
                    <option value="Non Center involving">Non Center involving</option>
                    <option value="Other (like cataract)">Other (like cataract)</option>
                </select>
                <br><br>

                <!-- Macular Edema Left Eye -->
                <label for="mel">Macular Edema Left Eye:</label>
                <select id="mel" name="mel">
                    <option value="Center involving">Center involving</option>
                    <option value="Non Center involving">Non Center involving</option>
                    <option value="Other (like cataract)">Other (like cataract)</option>
                </select>
                <br><br>

                <!-- OCT Right Eye -->
                <label for="octr">OCT Right Eye:</label>
                <input type="text" id="octr" name="octr" placeholder="Enter OCT value">
                <br><br>

                <!-- OCT Left Eye -->
                <label for="octl">OCT Left Eye:</label>
                <input type="text" id="octl" name="octl" placeholder="Enter OCT value">
                <br><br>
            </div>
            <div class="adv">

                <label for="">Advice</label>

                <p>

                <p>
                    <label>
                        <input type="checkbox" name="advice" value="Follow up, continue same treatment">
                        Follow up, continue same treatment
                    </label>

                </p>

                <!-- Checkbox for Follow up, start on new medications advised -->
                <p>
                    <label>
                        <input type="checkbox" name="advice" value="Follow up, start on new medications advised">
                        Follow up, start on new medications advised
                    </label>

                </p>

                <!-- Checkbox for PRP -->
                <p>
                    <label>
                        <input type="checkbox" name="advice" value="PRP">
                        PRP
                    </label>
                </p>


                <!-- Checkbox for Intravitreal injection -->
                <p>
                    <label>
                        <input type="checkbox" name="advice" value="Intravitreal injection">
                        Intravitreal injection
                    </label>
                </p>


                <!-- Checkbox for Vitreoretinal Surgery -->
                <p>
                    <label>
                        <input type="checkbox" name="advice" value="Vitreoretinal Surgery">
                        Vitreoretinal Surgery
                    </label>
                </p>

                </p>

                <!-- Follow-Up Date Input -->
                <label for="fllwp">Follow-up Date:</label>
                <input type="date" id="fllwp" name="fllwp">



                <button type="submit" class="submit-btn">Submit</button>
            </div>
        </form>
    </div>



    <script>
    document.querySelectorAll('label').forEach(label => {
        label.classList.add('font-medium','text-xl'); // Adds Tailwind class
    });

    // document.querySelectorAll('input').forEach(label => {
    //     label.classList.add("min-w-24","max-w-48","block","rounded-sm","p-1","text-base"); // Adds Tailwind class
    // });
</script>
</body>

</html>